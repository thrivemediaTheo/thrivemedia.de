---
import { Icon } from "astro-icon";
const { icon, label, value, href, hreftitle } = Astro.props;
---

<div class="flex flex-col space-y-2 lg:space-y-3">
  <label class="text-text flex flex-row items-center gap-x-3 lg:gap-x-4">
    <div class="bg-primary grid place-items-center rounded-full p-2">
      <Icon name={icon} class="text-background h-5 lg:h-6" />
    </div>
    <span class="text-xl lg:text-2xl font-header">{label}</span>
  </label>
  <a
    class="text-xl lg:text-2xl text-text hover:text-primary transition-colors duration-300"
    href={href}
    title={hreftitle}
  >
    {value}
  </a>
</div>
