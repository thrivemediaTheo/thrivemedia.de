---
import { Icon } from "astro-icon";
import PrimaryButton from "./PrimaryButton.astro";
import ThriveLogo from "./ThriveLogo.astro";
---

<header
  class="w-full bg-background fixed top-0 left-0 right-0 z-50 shadow-header transition-all duration-500 ease-in px-4 font-nav"
>
  <div
    class="grid grid-cols-3 items-center mx-auto relative py-4 max-w-screen-2xl"
  >
    <ThriveLogo />
    <nav class="justify-self-center hidden md:block">
      <ul class="flex flex-row justify-evenly items-center space-x-6">
        <li>
          <a
            class="cursor-pointer text-text hover:text-primary capitalize transition-colors duration-300 ease-in tracking-wider text-base"
            href="/#"
            title="Home"
            rel="prefetch-intent"
          >
            Home
          </a>
        </li>
        <li>
          <a
            class="cursor-pointer text-text hover:text-primary capitalize transition-colors duration-300 ease-in tracking-wider text-base"
            href="/#services"
            title="Services"
            rel="prefetch-intent"
          >
            Services
          </a>
        </li>
        <li>
          <a
            class="cursor-pointer text-text hover:text-primary capitalize transition-colors duration-300 ease-in tracking-wider text-base"
            href="/#about"
            title="About"
            rel="prefetch-intent"
          >
            About
          </a>
        </li>
        <li>
          <a
            class="cursor-pointer text-text hover:text-primary capitalize transition-colors duration-300 ease-in tracking-wider text-base"
            href="/#prevwork"
            title="Portfolio"
            rel="prefetch-intent"
          >
            Portfolio
          </a>
        </li>
        <li class="tracking-wider">
          <PrimaryButton size="sm" href="/#contact" title="Contact">
            Contact
          </PrimaryButton>
        </li>
      </ul>
    </nav>
    <ul class="justify-self-end flex-row space-x-3 hidden md:flex">
      <li>
        <a
          class="cursor-pointer bg-primary rounded-full p-1 grid aspect-square"
          href="https://www.behance.net/theoschneidereit"
          title="Behance"
        >
          <Icon name="jam:behance" class="h-6 aspect-square text-background" />
        </a>
      </li>
      <li>
        <a
          class="cursor-pointer bg-primary rounded-full p-1 grid aspect-square"
          href="https://vimeo.com/thrivemediasolutions"
          title="Vimeo"
        >
          <Icon name="jam:vimeo" class="h-6 aspect-square text-background" />
        </a>
      </li>
    </ul>
  </div>
</header>
<div class="h-20"></div>
