---
import "../assets/css/fonts.css";
import "../assets/css/global.css";
import TheHeader from "../components/TheHeader.astro";
import TheFooter from "../components/TheFooter.astro";
import CommonHead from "../components/CommonHead.astro";

const { title } = Astro.props;
---

<html lang="de">
  <head>
    <CommonHead title={title} />
    <title>{title}</title>
  </head>
  <body class="bg-background font-body flex flex-col min-h-screen relative">
    <TheHeader />
    <slot name="pre" />
    <main
      class="mx-auto relative px-4 max-w-screen-xl flex flex-col space-y-36 grow"
    >
      <slot />
    </main>
    <slot name="post" />
    <TheFooter />
  </body>
</html>
